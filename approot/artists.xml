<?xml version="1.0" encoding="UTF-8" ?>
<messages xmlns:if="Wt.WTemplate.conditions">
<!--FORMS message blocks-->

<message id="Lms.Explore.Artists.template">
	<div class="Lms-header">
		<h2>${tr:Lms.Explore.artists}</h2>
		${mode class="nav nav-pills Lms-explore-mode-container"}
		<div class="row">
			<div class="col-sm-2">
				${link-type}
			</div>
		</div>
	</div>
	${artists}
	<div class="row">
		<div class="col-xs-12 Lms-horizontal-center">
			${show-more class="btn-primary Lms-show-more"}
		</div>
	</div>
</message>

<message id="Lms.Explore.Artists.template.entry">
	<div class="row Lms-explore-artists-entry Lms-entry-hoverable Lms-vertical-align">
		 <div class="col-xs-12">
			 <h4>${name class="Lms-artistname text-primary"}</h4>
		</div>
	</div>
</message>

<message id="Lms.Explore.Artists.template.entry-small">
	<div class="row Lms-explore-artists-entry-small Lms-entry-hoverable Lms-vertical-align">
		<div class="col-xs-12">
			${name class="Lms-artistname text-primary"}
		</div>
	</div>
</message>

</messages>
